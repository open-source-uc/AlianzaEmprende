---
import ButtonLink from "../ButtonLink.astro";
---

<header
    id="main-header"
    class="sticky top-0 flex items-center justify-between py-6 px-4 md:px-6 z-50 transition-colors duration-300"
>
    <div
        class="flex items-center justify-between flex-1 md:justify-start gap-6"
    >
        <input
            type="checkbox"
            id="menu-toggle"
            class="hidden peer/menu-toggle"
        />
        <div>
            <!-- logo temporal hasta tener una de mejor calidad -->
            <a href="/">
                <img src="/logo-placeholder.png" alt="Logo" class="size-14" />
            </a>
        </div>
        <nav
            class="fixed md:static top-0 -right-full md:right-0 h-screen md:h-auto w-4/5 md:w-auto bg-white md:bg-transparent shadow-lg md:shadow-none transition-all duration-300 ease-in-out peer-checked/menu-toggle:right-0 z-40"
        >
            <ul
                class="flex flex-col font-medium md:flex-row gap-6 md:gap-12 p-6 md:p-0 pt-20 md:pt-0 [&>li>a]:transition [&>li>a]:hover:text-blue-500 [&>li>a]:block [&>li>a]:py-2 md:[&>li>a]:py-0 [&>li>a]:text-xl md:[&>li>a]:text-lg"
            >
                <li><a href="/noticias">Noticias</a></li>
                <li><a href="/eventos">Eventos</a></li>
                <li><a href="/about">Acerca</a></li>
                <ButtonLink
                    label="Sé Parte"
                    href="/join"
                    classname="text-center md:hidden"
                />
            </ul>
        </nav>
        <label for="menu-toggle" class="md:hidden cursor-pointer z-50 relative">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-8 w-8"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
        </label>
    </div>
    <ButtonLink label="Sé Parte" href="/join" classname="hidden md:inline" />
</header>

<script>
    const header = document.getElementById("main-header");

    function handleScroll() {
        if (window.scrollY > 50) {
            header?.classList.add("bg-white", "shadow-md");
            header?.classList.remove("bg-transparent");
        } else {
            header?.classList.add("bg-transparent");
            header?.classList.remove("bg-white", "shadow-md");
        }
    }

    handleScroll();
    window.addEventListener("scroll", handleScroll);
</script>
