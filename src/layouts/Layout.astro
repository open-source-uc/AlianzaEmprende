---
import "@/styles/global.css";
import Header from "@/components/Layout/Header.astro";
import Footer from "@/components/Layout/Footer.astro";

interface Props {
    title?: string;
    description?: string;
    classname?: string;
}

const { title = "Alianza Emprende", description, classname } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{title}</title>
        <meta name="description" content={description} />
        <slot name="head" />
    </head>
    <body class={`relative ${classname}`}>
        <Header />
        <slot />
        <Footer />
    </body>
</html>
